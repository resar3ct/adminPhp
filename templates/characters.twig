{% extends "base.twig" %}

{% block body %}

<body style="background: #07060C;height: 110px;border: 1px solid #FFFFFF;">

<div style="width: 1400px;height: 600px; margin: 10px 0px 0px 20px; display: flex;">
<div style="display: block; margin: 0px 50px 0px 0px;">
<div style="margin: 50px 0px 50px 50px;font-family: 'Montserrat';font-style: normal;font-weight: 500;font-size: 64px;line-height: 78px;display: flex;align-items: center;color: #FFFFFF;">{{name}}</div>
<div style="box-sizing: border-box;width: 838px;height: 306px;border: 1px solid #FFFFFF;font-family: 'Montserrat';font-style: normal;font-weight: 500;font-size: 24px;line-height: 29px;display: flex;align-items: center;color: #FFFFFF;">{{description}}</div>
</div>
<div style="margin: 30px 0px 50px 50px;box-sizing: border-box;width: 398px;height: 556px;border: 1px solid #FFFFFF;justify-content: center;display: flex;"><img style="max-width:100%;max-height:100%;margin: 0 auto;" src='{{thumbnail}}.jpg'/></div>
</div>

<div style="box-sizing: border-box;position: absolute;width: 755px;height: 70px;top: 730px;left: 480px;border: 1px solid #FFFFFF;"></div>
<button class="btn" style="box-sizing: border-box;position: absolute;width: 591px;height: 61px;top: 750px;left: 580px;border: 1px solid #FFFFFF;font-family: 'Montserrat';font-style: normal;font-weight: 500;font-size: 32px;line-height: 39px;align-items: center;text-align: center;color: #FFFFFF; background-color:#07060C;">next character</button>

</body>

<script>
window.onload = function() {
    var buttons = document.getElementsByClassName('btn');
    
    for (let index = 0; index < buttons.length; index++) {
        buttons[index].addEventListener("click", (event) => {
            event.preventDefault();
            window.location = 'http://localhost:8000/characters';
        })
        
    }
}
</script>
{% endblock %}